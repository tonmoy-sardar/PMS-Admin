<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:padding="@dimen/_10sdp">

    <EditText
        android:id="@+id/etContractType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_border_solid_white"
        android:padding="@dimen/_10sdp"
        android:hint="Contract type"/>

    <EditText
        android:id="@+id/etDescription"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:background="@drawable/rectangle_border_solid_white"
        android:padding="@dimen/_10sdp"
        android:hint="Description"
        android:layout_marginTop="@dimen/_10sdp"/>

    <TextView
        android:id="@+id/tvSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_button"
        android:padding="@dimen/_10sdp"
        android:layout_margin="@dimen/_20sdp"
        android:text="ADD"
        android:textColor="@android:color/white"
        android:gravity="center"/>

    <EditText
        android:id="@+id/etDocumentName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_border_solid_white"
        android:padding="@dimen/_10sdp"
        android:hint="Document name"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_10sdp">

        <ImageView
            android:id="@+id/ivSelect"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:src="@drawable/attachment_icon"/>

        <TextView
            android:id="@+id/tvUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ivSelect"
            android:background="@drawable/rectangle_border_solid_white"
            android:text="Upload"
            android:padding="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"/>

    </RelativeLayout>



</LinearLayout>