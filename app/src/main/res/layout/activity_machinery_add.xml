<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:padding="@dimen/_10sdp">

    <EditText
        android:id="@+id/etPMType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_border_solid_white"
        android:padding="@dimen/_10sdp"
        android:hint="@string/p_and_m_type"/>


    <EditText
        android:id="@+id/etPMmake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_border_solid_white"
        android:padding="@dimen/_10sdp"
        android:layout_marginTop="10dp"
        android:hint="Make"/>


    <EditText
        android:id="@+id/etHire"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_border_solid_white"
        android:padding="@dimen/_10sdp"
        android:hint="Hire"
        android:layout_marginTop="@dimen/_10sdp"/>

    <EditText
        android:id="@+id/etKhoraki"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_border_solid_white"
        android:padding="@dimen/_10sdp"
        android:hint="Khoraki"
        android:layout_marginTop="@dimen/_10sdp"/>

    <TextView
        android:id="@+id/tvSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_button"
        android:padding="@dimen/_10sdp"
        android:layout_margin="@dimen/_20sdp"
        android:text="ADD"
        android:textColor="@android:color/white"
        android:gravity="center"/>

    <EditText
        android:id="@+id/etDocumentName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_border_solid_white"
        android:padding="@dimen/_10sdp"
        android:hint="Document name"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:padding="@dimen/_10sdp">

        <LinearLayout
            android:id="@+id/llImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivSelect"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/attachment_icon"/>

            <ImageView
                android:id="@+id/ivPdf"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:src="@drawable/ic_picture_as_pdf_blue_24dp"
                android:visibility="gone"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvUpload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/llImage"
            android:background="@drawable/rectangle_border_solid_white"
            android:text="Upload"
            android:padding="@dimen/_10sdp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/_10sdp"
            android:visibility="gone"/>

    </RelativeLayout>



</LinearLayout>