<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etPMType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_border_solid_white"
                android:hint="@string/p_and_m_type"
                android:padding="@dimen/_10sdp" />


            <EditText
                android:id="@+id/etPMmake"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle_border_solid_white"
                android:hint="Make"
                android:padding="@dimen/_10sdp" />


            <EditText
                android:id="@+id/etHire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/rectangle_border_solid_white"
                android:hint="Hire"
                android:padding="@dimen/_10sdp" />

            <EditText
                android:id="@+id/etKhoraki"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/rectangle_border_solid_white"
                android:hint="Khoraki"
                android:padding="@dimen/_10sdp" />

            <TextView
                android:id="@+id/tvSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp"
                android:background="@drawable/rounded_corner_button"
                android:gravity="center"
                android:padding="@dimen/_10sdp"
                android:text="ADD"
                android:textColor="@android:color/white" />


            <LinearLayout
                android:id="@+id/ll_add_document_fields"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <EditText
                    android:id="@+id/etDocumentName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rectangle_border_solid_white"
                    android:hint="Document name"
                    android:imeOptions="actionDone"
                    android:inputType="text"
                    android:padding="@dimen/_10sdp"
                    android:singleLine="true" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:id="@+id/llImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/gray_view_color"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ivSelect"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:padding="10dp"
                            android:src="@drawable/attachment_icon" />

                        <ImageView
                            android:id="@+id/ivPdf"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:padding="10dp"
                            android:src="@drawable/ic_picture_as_pdf_blue_24dp"
                            android:visibility="gone" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/llUploadFile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/llImage"
                        android:gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/iv_upload_file"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:background="@color/gray_view_color"
                            android:padding="10dp"
                            android:src="@drawable/ic_file_upload" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:text="Upload File"
                            android:textColor="@color/textcolor" />


                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>


