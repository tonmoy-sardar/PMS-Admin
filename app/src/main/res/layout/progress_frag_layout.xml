<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="vertical">


        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:weightSum="4"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_margin="10dp"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="@color/card_background_color"
                    android:elevation="5dp"
                    android:layout_height="match_parent">

                    <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                        android:id="@+id/spnsitelocation"
                        style="@style/DrawerText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:spinnerMode="dropdown"
                        android:textSize="15sp" />



                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_margin="10dp"
                    android:layout_marginTop="10dp"
                    app:cardBackgroundColor="@color/card_background_color"
                    android:elevation="5dp"
                    android:layout_height="match_parent">

                    <EditText
                        android:id="@+id/edt_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="5dp"
                        android:gravity="center"
                        android:background="@color/edittext_background_color"
                        android:hint="Date"
                        android:editable="false"
                        android:padding="10dp"
                        android:textColor="@color/textcolor"
                        android:textColorHint="@color/textcolor"
                        android:textSize="15sp" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                />
        <LinearLayout
            android:gravity="center_horizontal"
            android:weightSum="4"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView

                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/card_background_color"
                android:elevation="5dp"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/edt_weather"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:background="@color/edittext_background_color"
                    android:hint="Weather"
                    android:padding="10dp"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/textcolor"
                    android:textSize="15sp" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                />

        <LinearLayout
            android:gravity="center_horizontal"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLabelCompletionPeriod"
                android:textSize="22sp"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:text="Completion Period"
                android:layout_height="wrap_content" />

        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="10dp" />

        <LinearLayout
            android:gravity="center_horizontal"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/card_background_color"
                android:elevation="5dp"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/edt_completion_date"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:background="@color/edittext_background_color"
                    android:hint="Date of Completion"
                    android:editable="false"

                    android:padding="10dp"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/textcolor"
                    android:textSize="15sp" />

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/card_background_color"
                android:elevation="5dp"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/edt_milestone_completed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:background="@color/edittext_background_color"
                    android:hint="Milestone to be Completed"
                    android:editable="false"
                    android:focusable="true"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/textcolor"
                    android:textSize="15sp" />


            </androidx.cardview.widget.CardView>




        </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"
                />
            <View
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="60dp"
                />
        <LinearLayout
            android:gravity="center_horizontal"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/card_background_color"
                android:elevation="5dp"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/edt_activity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:background="@color/edittext_background_color"
                    android:hint="Activity"
                    android:editable="true"
                    android:padding="10dp"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/textcolor"
                    android:textSize="15sp" />


            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/card_background_color"
                android:elevation="5dp"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/edt_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:background="@color/edittext_background_color"
                    android:hint="Description"
                    android:editable="true"
                    android:padding="10dp"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/textcolor"
                    android:textSize="15sp" />


            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/card_background_color"
                android:elevation="5dp"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/edt_planed_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:background="@color/edittext_background_color"
                    android:hint="Planned Start Time"
                    android:editable="false"
                    android:padding="10dp"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/textcolor"
                    android:textSize="15sp" />


            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/card_background_color"
                android:elevation="5dp"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/edt_planed_end_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:background="@color/edittext_background_color"
                    android:hint="Planned End Time"
                    android:editable="false"
                    android:padding="10dp"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/textcolor"
                    android:textSize="15sp" />


            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/card_background_color"
                android:elevation="5dp"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/edt_uom"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:background="@color/edittext_background_color"
                    android:hint="UOM"
                    android:editable="true"
                    android:padding="10dp"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/textcolor"
                    android:textSize="15sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout
            android:gravity="center_horizontal"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/card_background_color"
                android:elevation="5dp"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/edt_actual_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:background="@color/edittext_background_color"
                    android:hint="Actual Start Time"
                    android:editable="false"
                    android:padding="10dp"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/textcolor"
                    android:textSize="15sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/card_background_color"
                android:elevation="5dp"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/edt_actual_end_time"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:background="@color/edittext_background_color"
                    android:hint="Actual End Time"
                    android:editable="false"
                    android:padding="10dp"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/textcolor"
                    android:textSize="15sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <LinearLayout
            android:gravity="center_horizontal"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/card_background_color"
                android:elevation="5dp"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/edt_planned_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:background="@color/edittext_background_color"
                    android:hint="Planned Quantity"
                    android:editable="true"
                    android:padding="10dp"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/textcolor"
                    android:textSize="15sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/card_background_color"
                android:elevation="5dp"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/edt_achieved_quantity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:background="@color/edittext_background_color"
                    android:hint="Achieved Quantity"
                    android:editable="true"
                    android:padding="10dp"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/textcolor"
                    android:textSize="15sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/card_background_color"
                android:elevation="5dp"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/edt_asigned_to"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:background="@color/edittext_background_color"
                    android:hint="Assigned to"
                    android:editable="true"
                    android:padding="10dp"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/textcolor"
                    android:textSize="15sp" />
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/card_background_color"
                android:elevation="5dp"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/edt_contractor_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:background="@color/edittext_background_color"
                    android:hint="Contractor's name"
                    android:editable="true"
                    android:padding="10dp"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/textcolor"
                    android:textSize="15sp" />
            </androidx.cardview.widget.CardView>




        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/card_background_color"
                android:elevation="5dp"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/edt_remarks"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:background="@color/edittext_background_color"
                    android:hint="Remarks"
                    android:editable="true"
                    android:padding="10dp"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/textcolor"
                    android:textSize="15sp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_margin="10dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/card_background_color"
                android:elevation="5dp"
                android:layout_height="match_parent">

                <EditText
                    android:id="@+id/edt_major_achievements"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:inputType="text"
                    android:background="@color/edittext_background_color"
                    android:hint="Major Achievements"
                    android:editable="true"
                    android:padding="10dp"
                    android:textColor="@color/textcolor"
                    android:textColorHint="@color/textcolor"
                    android:textSize="15sp" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:layout_height="100dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/addmore"
                android:src="@drawable/add_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


            <androidx.recyclerview.widget.RecyclerView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/recyclerview"


                />

            <LinearLayout
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:layout_width="180dp"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/save"
                    android:src="@drawable/save_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>






    </ScrollView>


</RelativeLayout>
