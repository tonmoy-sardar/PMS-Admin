<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pmsadmin.survey.resource.AddContactActivity"
    android:background="@color/bgcolor"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:id="@+id/rl_title_bar"
        android:background="#29b2e5"
        >

        <TextView
            android:id="@+id/tv_universal_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Add Contact"
            android:textColor="#ffffff"
            android:textSize="@dimen/_14sdp" />




    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp"
        android:orientation="vertical"
        android:layout_below="@+id/rl_title_bar"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ll_add_new_contact"
            >


            <EditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_border_solid_white"
                android:padding="@dimen/_10sdp"
                android:hint="Name"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:inputType="textPersonName"
                android:layout_marginTop="20dp"
                />



            <EditText
                android:id="@+id/et_contact_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_border_solid_white"
                android:padding="@dimen/_10sdp"
                android:hint="Contact Number"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:inputType="phone"
                android:maxLength="10"
                android:layout_marginTop="15dp"
                />



            <EditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rectangle_border_solid_white"
                android:padding="@dimen/_10sdp"
                android:hint="Email"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:inputType="textEmailAddress"
                android:layout_marginTop="15dp"
                />


            <TextView
                android:id="@+id/tv_add_contact"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner_button"
                android:padding="@dimen/_10sdp"
                android:layout_marginTop="15dp"
                android:text="ADD CONTACT"
                android:textColor="@android:color/white"
                android:gravity="center"
                android:layout_gravity="right"
                />


        </LinearLayout>


    </LinearLayout>



</RelativeLayout>
