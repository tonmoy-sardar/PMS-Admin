<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pmsadmin.survey.resource.AddContactActivity"
    android:background="@color/tranparent"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll_add_new_contact"
        android:background="@color/color_white"
        android:padding="20dp"
        android:layout_centerInParent="true"
        android:layout_margin="15dp"
        >


        <EditText
            android:id="@+id/et_document_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_border_solid_white"
            android:padding="@dimen/_10sdp"
            android:hint="Enter your document name"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:inputType="text"
            />


        <TextView
            android:id="@+id/tv_save_name"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_corner_button"
            android:padding="@dimen/_10sdp"
            android:layout_marginTop="15dp"
            android:text="SAVE"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_gravity="right"
            />


    </LinearLayout>



</RelativeLayout>
