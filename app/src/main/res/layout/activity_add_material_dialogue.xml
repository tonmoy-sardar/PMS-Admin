<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llParent"
    android:layout_width="@dimen/_250sdp"
    android:layout_height="@dimen/_200sdp"
    android:layout_gravity="center"
    android:background="@color/bgcolor"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardClinics"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="@dimen/_20sdp"
        android:padding="@dimen/_10sdp">


        <RelativeLayout
            android:id="@+id/rlParentDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <TextView
                android:id="@+id/txtclose"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:padding="@dimen/_200sdp"
                android:text="X"
                android:textColor="#ffffff"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtclose"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_centerInParent="true"
                android:padding="@dimen/_10sdp">

                <!--<androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:elevation="10dp"
                    android:padding="5dp">

                    &lt;!&ndash;<TextView
                        android:id="@+id/item"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="5dp"
                        android:textColor="@android:color/black"
                        android:textSize="12sp"
                        android:text=" Select"/>&ndash;&gt;

                    <Spinner
                        android:id="@+id/spMaterial"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:padding="5dp">
                    </Spinner>

                </androidx.cardview.widget.CardView>-->


                <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/activity_edit_profile_cv_bloog_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    card_view:cardCornerRadius="4dp"
                    card_view:cardElevation="@dimen/_5sdp">

                    <Spinner
                        android:id="@+id/spMaterial"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:inputType="text"
                        android:padding="@dimen/_10sdp"
                        android:textColorHint="@color/textcolor"
                        android:textSize="@dimen/_14sdp" />
                </androidx.cardview.widget.CardView>





                <TextView
                    android:id="@+id/tvSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:text="Add"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_15sdp"
                    android:background="@drawable/rounded_corner_button"/>


            </LinearLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>